<!DOCTYPE html>
<html>
<head>
  <title><%= @pageTitle ? @pageTitle : 'Welcome' %> || The Bookstore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="author" content="">
  <meta name="description" content="">
  <link rel="icon" href="#">
</head>
<body>
  <header>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= params[:controller] == 'books' && params[:action] ? 'active' : '' %>"> <%= link_to 'Home', root_path %></li>
            <li class="<%= params[:controller] == 'about' ? 'active' : '' %>"><%= link_to 'About', about_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Add New<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li class="<%= params[:controller] == 'books' && params[:action] == 'new' ? 'active' : '' %>"><%= link_to 'New Book', new_book_path %></li>
                <li class="<%= params[:controller] == 'categories' && params[:action] == 'new' ? 'active' : '' %>"><%= link_to 'New Category', new_category_path %></li>
                <li class="<%= params[:controller] == 'authors' && params[:action] == 'new' ? 'active' : '' %>"><%= link_to 'New Author', new_author_path %></li>
                <li class="<%= params[:controller] == 'publishers' && params[:action] == 'new' ? 'active' : '' %>"><%= link_to 'New Publisher', new_publisher_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Manage<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li class="<%= params[:controller] == 'categories' && params[:action] == 'index' ? 'active' : '' %>"><%= link_to 'Categories', categories_path %></li>
                <li class="<%= params[:controller] == 'authors' && params[:action] == 'index' ? 'active' : '' %>"><%= link_to 'Authors', authors_path %></li>
                <li class="<%= params[:controller] == 'publishers' && params[:action] == 'index' ? 'active' : '' %>"><%= link_to 'Publishers', publishers_path %></li>
              </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
  </header>

  <header class="welcome">
    <div class="container">
      <h1>The Bookstore <small><%= @pageTitle ? @pageTitle : 'Welcome' %></small></h1>
    </div>
  </header>

  <section style="min-height: 900px;">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <!-- Flash messages -->
          <% if flash[:notice] %>
            <div class="alert alert-info">
              <%= flash[:notice] %>
            </div>
          <% elsif flash[:alert] %>
            <div class="alert alert-warning">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <%= yield %>
        </div>
        <div class="col-md-4">
          <%= render 'partials/sidebar' %>
        </div>
      </div>
    </div>
  </section>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p>&copy; 2017 Rightless</p>
        </div>
      </div>
    </div>
  </footer>

</body>
</html>
