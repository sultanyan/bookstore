<h3>Publishers</h3>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @publishers.each do |publisher| %>
            <tr>
                <th><%= publisher.first_name %></th>
                <th><%= publisher.last_name %></th>
                <th><%= link_to 'Edit', edit_publisher_path(publisher) %> | <%= link_to 'Delete', publisher_path(publisher), method: :delete, data:{confirm: "Are you sure?"} %></th>
            </tr>
        <% end %>
    </tbody>
</table>
